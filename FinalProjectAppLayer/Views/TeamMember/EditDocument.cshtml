@model FinalProjectBusinessLayer.Entitys.Document


<h1>EditDocument</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDocumentDone">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DocumentID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">File</label>
                <input name="File" type="file" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <select asp-for="DutyID" hidden class="form-control" asp-items="ViewBag.DutyID"></select>
            </div>
            <div class="form-group">
                <select asp-for="StatusID" hidden class="form-control" asp-items="ViewBag.StatusID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
